---
import Layout from '../layouts/Layout.astro'
import PFP from '../components/Images/PFP.png'
import SupabaseIcon from '../components/Images/Supabase.png'
import HTMLSkill from '../components/Images/HTML.png'
import AstroSkill from '../components/Images/Astro.png'
import TailwindSkill from '../components/Images/Tailwind.png'

let age = new Date().getFullYear() - 2008

let education = ""

// if the age is 14 - 18, then I am in high school, if it is from 18 - 24 I am in College and if I am 24+ I am in a job
if (age >= 14 && age <= 18) {
    education = "High School"
} else if (age >= 18 && age <= 24) {
    education = "College"
} else if (age >= 24) {
    education = "job"
}
---

<Layout title="RangerDevv">
    <header class="flex flex-col justify-center items-center h-screen pb-24">
        <p class="text-4xl font-bold text-center">👋 I am RangerDevv.</p>
        <p class="text-2xl font-normal text-center">A passionate developer who likes to explore and build thing.</p>
    </header>
    <main class="flex md:flex-row flex-col-reverse justify-center h-[calc(100vh-4rem)]">
        <div class="flex flex-col md:w-1/2">
            <p class="text-4xl font-bold pt-10 md:pt-0">About Me 🚀</p>
            <p class="text-xl font-normal pt-4">I am RangerDevv. (aka Meer, Ranger). I am a web developer who started coding when I was 12 and I have come a long way since. I love to make websites and make Figma UI designs just for fun 😁. Here are some facts about me: <br>
            - 🎉 I am {age} years old <br>
            - 🎓 I am in {education} <br>
            - ⚽ I love to play soccer <br>
            - 🎮 I love to play video games <br>
            - 🎨 I love to make Figma UI designs <br>
            - 🚲I love to ride my bike when the weather is good <br>
            - 🎵 I love to listen to music <br>
            - 🚗 I love Audi cars
            </p>
        </div>
        <div class="flex flex-col justify-center md:w-1/2">
            <img src={PFP} alt="PFP" class=" w-1/2 mx-auto" >
        </div>
    </main>
    <main class="flex flex-col pt-10 h-screen">
        <p class="text-4xl font-bold pt-10 md:pt-0 text-center">Skills 🛠</p>
        <div class="flex flex-row flex-wrap pt-10 gap-16 mx-auto">
            <img src={SupabaseIcon} alt="Supabase" class="w-32" >
            <img src={HTMLSkill} alt="HTML" class="w-32" >
            <img src={AstroSkill} alt="Astro" class="w-32" >
            <img src={TailwindSkill} alt="Tailwind" class="w-40 h-28" >
        </div>
    </main>
</Layout>